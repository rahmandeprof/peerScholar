NODE_ENV=development
PORT=3000

APP_URL=http://localhost:${PORT}
CLIENT_URL=http://localhost:3001

BETTER_AUTH_SECRET=dev-secret-key-change-in-production
BETTER_AUTH_URL=${APP_URL}

TRUSTED_ORIGINS=http://localhost:3001,http://localhost:3000
CROSS_DOMAIN_ORIGIN=http://localhost:3001

# Database: Postgres (default for local dev)
TYPEORM_CONNECTION=postgres
TYPEORM_URL=postgres://postgres:postgres@localhost:5432/scholar_dev
TYPEORM_SYNCHRONIZE=true
TYPEORM_ENTITIES=src/**/entities/*.ts
TYPEORM_MIGRATIONS=src/database/migrations/*.ts
TYPEORM_MIGRATIONS_DIR=src/database/migrations
TYPEORM_CHARSET=utf8
TYPEORM_COLLATION=utf8_general_ci

# Alternative: SQLite (quick local dev without Postgres setup)
# Uncomment below and comment out Postgres above
# TYPEORM_CONNECTION=sqlite
# TYPEORM_URL=scholar_dev.sqlite
# TYPEORM_SYNCHRONIZE=true
# TYPEORM_ENTITIES=src/**/entities/*.ts
# TYPEORM_MIGRATIONS=src/database/migrations/*.ts
# TYPEORM_MIGRATIONS_DIR=src/database/migrations

SECURE_TOKEN_EXPIRY=3600

OAUTH_GOOGLE_CLIENT_ID=google-client-id-dev
OAUTH_GOOGLE_CLIENT_SECRET=google-client-secret-dev
OAUTH_TWITTER_CLIENT_ID=twitter-client-id-dev
OAUTH_TWITTER_CLIENT_SECRET=twitter-client-secret-dev

FROM_EMAIL=dev@example.com
FROM_NAME=Scholar Dev

SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_EMAIL=dev@example.com
SMTP_PASSWORD=devpass

# OpenAI API key (required for chat feature)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Cloudinary (file upload)
CLOUD_NAME=cloudinary-dev
CLOUD_API_KEY=cloudinary-api-key-dev
CLOUD_API_SECRET=cloudinary-api-secret-dev
CLOUDINARY_URL=cloudinary://dummy@cloudinary-dev

MAX_FILE_UPLOAD_SIZE_IN_BYTES=10485760

SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change-me-in-production